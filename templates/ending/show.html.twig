{% extends 'base.html.twig' %}

{% block title %}{{ ending.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-0">{{ ending.title }}</h1>
                        <small class="text-muted">
                            Posted by {{ ending.user.firstName ?? ending.user.email }} 
                            on {{ ending.createdAt|date('F j, Y') }}
                        </small>
                    </div>
                    <span class="badge {% if ending.emotion == 'sad' %}bg-info{% elseif ending.emotion == 'shocking' %}bg-warning{% elseif ending.emotion == 'happy' %}bg-success{% elseif ending.emotion == 'angry' %}bg-danger{% endif %}">
                        {{ ending.emotion|capitalize }}
                    </span>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ ending.description|nl2br }}</p>
                    
                    {% if ending.image1Path or ending.image2Path or ending.image3Path %}
                        <h5 class="mt-4 mb-3">Images</h5>
                        <div class="row">
                            {% if ending.image1Path %}
                                <div class="col-md-4 mb-3">
                                    <img src="{{ asset('uploads/' ~ ending.image1Path) }}" class="img-fluid rounded" alt="Image 1">
                                </div>
                            {% endif %}
                            {% if ending.image2Path %}
                                <div class="col-md-4 mb-3">
                                    <img src="{{ asset('uploads/' ~ ending.image2Path) }}" class="img-fluid rounded" alt="Image 2">
                                </div>
                            {% endif %}
                            {% if ending.image3Path %}
                                <div class="col-md-4 mb-3">
                                    <img src="{{ asset('uploads/' ~ ending.image3Path) }}" class="img-fluid rounded" alt="Image 3">
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                    
                    {% if ending.audioPath %}
                        <h5 class="mt-4 mb-3">Audio</h5>
                        <audio controls class="w-100 mb-3">
                            <source src="{{ asset('uploads/' ~ ending.audioPath) }}" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                    {% endif %}
                    
                    {% if ending.videoPath %}
                        <h5 class="mt-4 mb-3">Video</h5>
                        <video controls class="w-100 mb-3">
                            <source src="{{ asset('uploads/' ~ ending.videoPath) }}" type="video/mp4">
                            Your browser does not support the video element.
                        </video>
                    {% endif %}
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_ending_index') }}" class="btn btn-secondary">Back to List</a>
                        {% if app.user and app.user == ending.user %}
                            <div>
                                <a href="{{ path('app_ending_my_endings') }}" class="btn btn-outline-primary">My Endings</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}