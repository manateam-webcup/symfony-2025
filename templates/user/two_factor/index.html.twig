{% extends 'layout.html.twig' %}

{% block title %}Two-Factor Authentication{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .qr-code-container {
            text-align: center;
            margin-bottom: 20px;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 5px;
        }
        .secret-key {
            font-family: monospace;
            background-color: #e9ecef;
            padding: 5px 10px;
            border-radius: 3px;
            word-break: break-all;
        }
        .setup-steps {
            margin-top: 20px;
            margin-bottom: 20px;
        }
        .setup-steps ol {
            padding-left: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="landing">
        <div class="landing-decoration"></div>
        <div class="landing-info">
            <div class="logo">
                <svg class="icon-logo-vikinger" aria-hidden="true" focusable="false">
                    <use xlink:href="#svg-logo-vikinger"></use>
                </svg>
            </div>

            <h2 class="landing-info-pretitle">Two-Factor Authentication</h2>

            <div class="setup-steps">
                <ol>
                    <li>Install Google Authenticator or another TOTP app on your mobile device</li>
                    <li>Scan the QR code with the app or enter the secret key manually</li>
                    <li>Enter the 6-digit code shown in your app</li>
                </ol>
            </div>

            <div class="qr-code-container">
                <h5>Scan this QR Code</h5>
                <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data={{ qrCodeUri|url_encode }}"
                     alt="QR Code for Google Authenticator" class="img-fluid">
            </div>

            <div class="mb-4">
                <h5>Or enter this secret key manually:</h5>
                <div class="secret-key">{{ secret }}</div>
            </div>
        </div>

        <div class="landing-form">

            <div id="login-form" class="form-box login-register-form-element" role="tabpanel" aria-labelledby="login-tab">
                <img class="form-box-decoration overflowing" src="/img/landing/rocket.png" alt="Decorative rocket image">

                <h2 class="form-box-title">Verification</h2>
                <p>&nbsp;</p>

                <form action="{{ path('app_2fa_verify') }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="form-row">
                        <div class="form-item">
                            <div class="form-input">
                                <p>Please enter the 6-digit verification code from your authenticator app.</p>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-item">
                            <div class="form-input">
                                <label for="code">Verification Code</label>
                                <input type="text" id="code" name="code" class="form-control" pattern="[0-9]{6}" maxlength="6" required autofocus aria-required="true">
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-item">
                            <button type="submit" class="button medium secondary">Verify</button>
                        </div>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <form action="{{ path('app_logout') }}" method="post" class="d-inline">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                        <button type="submit" class="btn btn-link p-0">Cancel and logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
