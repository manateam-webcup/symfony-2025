{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {% for label, messages in app.flashes(['success', 'error']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }}" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="text-center">Create an Account</h1>
                    </div>
                    <div class="card-body">
                        {{ form_errors(registrationForm) }}

                        {{ form_start(registrationForm) }}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(registrationForm.firstName) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(registrationForm.lastName) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_row(registrationForm.email) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(registrationForm.plainPassword, {
                                    label: 'Password'
                                }) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(registrationForm.confirmPassword, {
                                    label: 'Confirm Password'
                                }) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(registrationForm.agreeTerms) }}
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Register</button>
                            </div>
                        {{ form_end(registrationForm) }}

                        <div class="mt-3 text-center">
                            <p>Already have an account? <a href="{{ path('app_login') }}">Login here</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
