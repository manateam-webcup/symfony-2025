{% extends 'base.html.twig' %}

{% block title %}Two-Factor Authentication{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .qr-code-container {
            text-align: center;
            margin-bottom: 20px;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 5px;
        }
        .secret-key {
            font-family: monospace;
            background-color: #e9ecef;
            padding: 5px 10px;
            border-radius: 3px;
            word-break: break-all;
        }
        .setup-steps {
            margin-top: 20px;
            margin-bottom: 20px;
        }
        .setup-steps ol {
            padding-left: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mt-5">
                    <div class="card-header">
                        <h1 class="text-center">Two-Factor Authentication</h1>
                    </div>
                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger">{{ error }}</div>
                        {% endif %}

                        <div class="row">
                            <div class="col-md-6">
                                <h4>Setup Instructions</h4>
                                <div class="setup-steps">
                                    <ol>
                                        <li>Install Google Authenticator or another TOTP app on your mobile device</li>
                                        <li>Scan the QR code with the app or enter the secret key manually</li>
                                        <li>Enter the 6-digit code shown in your app</li>
                                    </ol>
                                </div>

                                <div class="qr-code-container">
                                    <h5>Scan this QR Code</h5>
                                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data={{ qrCodeUri|url_encode }}" 
                                         alt="QR Code for Google Authenticator" class="img-fluid">
                                </div>

                                <div class="mb-4">
                                    <h5>Or enter this secret key manually:</h5>
                                    <div class="secret-key">{{ secret }}</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h4>Verification</h4>
                                <p>Please enter the 6-digit verification code from your authenticator app.</p>

                                <form action="{{ path('app_2fa_verify') }}" method="post">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                    <div class="mb-3">
                                        <label for="code" class="form-label">Verification Code</label>
                                        <input type="text" id="code" name="code" class="form-control" required autofocus pattern="[0-9]{6}" maxlength="6">
                                        <div class="form-text">Enter the 6-digit code from your authenticator app.</div>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">Verify</button>
                                    </div>
                                </form>

                                <div class="mt-3 text-center">
                                    <form action="{{ path('app_logout') }}" method="post" class="d-inline">
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                                        <button type="submit" class="btn btn-link p-0">Cancel and logout</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
